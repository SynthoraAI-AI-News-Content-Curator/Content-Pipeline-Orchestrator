# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/content-curator
# or use MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/content-curator

# Google AI API Keys (for article summarization and AI features)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_AI_API_KEY1=your_google_ai_api_key1_optional
GOOGLE_AI_API_KEY2=your_google_ai_api_key2_optional
GOOGLE_AI_API_KEY3=your_google_ai_api_key3_optional

# AI Configuration
AI_INSTRUCTIONS=Summarize the articles concisely and naturally

# News API Keys (for external article sources)
NEWS_API_KEY=your_news_api_key_here
NEWS_API_KEY1=your_news_api_key1_optional

# Server Configuration
PORT=3000
NODE_ENV=development

# Crawler Configuration
CRAWL_URLS=https://www.state.gov/press-releases/,https://www.bbc.com/news,https://www.nytimes.com/,https://www.dallasnews.com/news/,https://www.houstonchronicle.com/,https://www.whitehouse.gov/briefing-room/,https://www.congress.gov/,https://www.statesman.com/news/politics-elections/
CRAWL_MAX_LINKS=100
CRAWL_TIMEOUT=30000

# API URLs
AICC_API_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# Email/Newsletter Configuration (Resend)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM="AI Content Curator <noreply@yourdomain.com>"
RESEND_DOMAIN=yourdomain.com
UNSUBSCRIBE_BASE_URL=http://localhost:3000/unsubscribe

# JWT Secret (for user authentication)
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Pinecone Configuration (for vector similarity search)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=article-embeddings

# AWS Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=content-curator-assets

# Azure Configuration (for cloud deployment)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_STORAGE_CONNECTION_STRING=your_connection_string

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_optional

# Feature Flags
ENABLE_ARTICLE_QA=true
ENABLE_RECOMMENDATIONS=true
ENABLE_BIAS_DETECTION=true
ENABLE_VECTOR_SEARCH=true
ENABLE_AGENTIC_PIPELINE=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_in_production
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# LangChain/LangGraph Configuration (for Agentic AI)
LANGCHAIN_API_KEY=your_langchain_api_key_optional
LANGCHAIN_PROJECT=content-curator-agentic
LANGCHAIN_TRACING_V2=true

# OpenAI Configuration (alternative to Google AI)
OPENAI_API_KEY=your_openai_api_key_optional

# Anthropic Configuration (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_optional

# Model Configuration
DEFAULT_MODEL=gemini-1.5-pro
EMBEDDING_MODEL=text-embedding-004
SUMMARIZATION_MODEL=gemini-1.5-flash

# Cron Job Configuration
CRON_FETCH_SCHEDULE=0 6,18 * * *
CRON_NEWSLETTER_SCHEDULE=0 9 * * *
CRON_VECTOR_SYNC_SCHEDULE=0 */6 * * *

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 0 * * *
BACKUP_RETENTION_DAYS=30
