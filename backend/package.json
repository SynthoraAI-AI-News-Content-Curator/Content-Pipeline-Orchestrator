{
  "name": "@content-orchestrator/backend",
  "version": "1.0.0",
  "description": "Backend API service for Content Pipeline Orchestrator",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --collectCoverageFrom='src/**/*.ts'",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "backend",
    "api",
    "express",
    "mongodb",
    "ai",
    "content-curation"
  ],
  "author": "SynthoraAI Team",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.19.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
